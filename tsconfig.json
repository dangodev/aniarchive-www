{
  "compilerOptions": {
    "allowUnreachableCode": false,
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "jsxFactory": "preact.h",
    "lib": ["DOM"],
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "outDir": "public",
    "strict": true,
    "target": "esnext",
    "paths": {
      "/web_modules/*.js": ["node_modules/@types/*", "node_modules/*", "public/web_modules/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
